# ===========================================
# EventCAD+ Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# NEVER commit .env files to version control

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=eventcad
DB_PASSWORD=EventCAD@2025
DB_DATABASE=eventcad
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=false

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:8081,https://eventcad.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===========================================
# FILE UPLOAD
# ===========================================
UPLOAD_MAX_FILE_SIZE=50MB
UPLOAD_ALLOWED_TYPES=image/*,application/pdf,application/dwg,application/dxf
UPLOAD_DESTINATION=./uploads

# ===========================================
# AI SERVICES
# ===========================================
AI_ENABLED=true
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# ===========================================
# MONITORING
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# ===========================================
# SECURITY
# ===========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this
COOKIE_SECRET=your-cookie-secret-change-this
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# ===========================================
# DEVELOPMENT
# ===========================================
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=false
SEED_DATABASE=false

# ===========================================
# PRODUCTION
# ===========================================
# Uncomment and configure for production
# NODE_ENV=production
# DB_SSL=true
# ENABLE_HTTPS=true
# DEBUG=false
# ENABLE_SWAGGER=false 